extends ../layouts/page-layout/page.pug

block variables
    - var title = 'Профиль пользователя';
    - var pageClass = 'content-page';

block content
    .sticky-footer-wrapper
        include ../sections/header-user.pug
        .sticky-footer-content
            .container.content-padding
                .row
                    .col-10.offset-1
                        .user-profile-block
                            .title-1.user-profile__title Профиль
                            .user-profile__button
                                +button('Редактировать', '#', 'edit')
                                
                        .user-profile-block--information
                            .user-profile__avatar
                                +avatar('avatar.jpg', 'alt text avatar')
                            .user-profile__description
                                +profileDescription ('Имя и фамилия', 'Емельян Казаков')
                                +profileDescription ('Email', 'pilat@mail.ru')
                                +profileDescription ('Страна, Город', 'Россия, Казань')
                                
                        .title-2.user-profile__title--comments Комментарии пользователя
                        
                        .user-profile-block--comments
                            +profileComment('Поездка в LA', '05 Мая 2017 года в 15:45')
                                p.
                                    Замечательный парк, обязательно отправлюсь туда этим летом. 
                        
                            +profileComment('Ноутбук для веб-разработчика', '15 Мая 2017 года в 10:02')
                                p.
                                    Замечательный парк, обязательно отправлюсь туда этим летом.
                                
                            +profileComment('Настройка Sublime', '12 Мая 2017 года в 20:39')
                                p.
                                    Замечательный парк, обязательно отправлюсь туда этим летом.
                                
                

                

            include ../sections/footer.pug