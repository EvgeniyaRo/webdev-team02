extends ../../layouts/ui-layout/ui-layout.pug

block variables
	- var title = 'Поля ввода - UI-kit и HTML фреймворк - Документация';
	- var pageClass = 'body--dashboard';

block content
	.main-wrapper
		.container.container--left.user-content.pt-35
			h1 Поля ввода
			.section-ui
				+input('name','text','Введите имя','Поле для ввода')
			pre.
				+input('name','text','Введите имя','Поле для ввода')
			
			.title mixins/_input.pug
			pre.
				mixin input(name,type,placeholder,id,labelText)
					- id = id || ""
					label.label(for=id) #{'#{labelText}'}
					input.input(name=name id=id type=type placeholder=placeholder)&attributes(attributes)
			.section-ui
				+textarea('name','Введите текст','Парк находится в горах Сьерра-Невада на востоке штата Калифорния и занимает огромную даже для Америки площадь, около 3000 кв. км.','Сообщение - Textarea')
					
			pre.
				+textarea('name','Введите текст','Парк находится в горах Сьерра-Невада на востоке штата Калифорния и занимает огромную даже для Америки площадь, около 3000 кв. км.','Сообщение - Textarea')
			
			.title mixins/_textarea.pug
			pre.
				mixin textarea(name,placeholder,areaText,id,labelText)
					- id = id || ""
					label.label-class(for=id) #{'#{labelText}'}
					textarea.textarea(name=name id=id placeholder=placeholder)&attributes(attributes) #{'#{areaText}'}

			p Параметры: name - содержание атрибута name, type - содержание атрибута type, placeholder - содержание атрибута placeholder, labelText - текст в теге label, areaText - текст в теге textarea.
