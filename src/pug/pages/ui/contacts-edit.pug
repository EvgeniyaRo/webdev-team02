extends ../../layouts/ui-layout/ui-layout.pug

block variables
	- var title = 'Контакты - редактировать - UI-kit и HTML фреймворк - Документация';
	- var pageClass = 'body--dashboard';

block content
	.main-wrapper
		.container.container--left.user-content.pt-35
			h1 Контакты - редактировать
			
			.section-ui
				include ../contacts-edit.pug
			.title pages/contacts-edit.pug
			pre.
				extends ../layouts/page-layout/page.pug

				block variables
					- var title = 'Контакты - редактировать';
					- var pageClass = 'content-page';

				block content
					.sticky-footer-wrapper
						include ../sections/header-admin.pug
						include ../sections/header-guest.pug
						.sticky-footer-content
							.container.contacts-edit.pl-0.pr-0.pt-80.pb-120
								.contacts-edit__title
									h1.title-1.contacts-edit__title-text.pl-15.no-margins Редактировать данные
								form.contacts-edit__form.mt-40
									.row.mb-30.ml-0.mr-0
										.col-md-3
											+input('first-name','text','Введите имя','Имя','contactName')
										.col-md-3
											+input('last-name','text','Введите фамилию','Фамилия','contactLastName')
									.row.mb-30.ml-0.mr-0
										.col-md-3
											+input('email','text','Введите email','Email','contactEmail')
										.col-md-3
											+input('skype','text','Введите skype','Skype','contactSkype')
									.row.mb-30.ml-0.mr-0
										.col-md-3
											+input('vkontakte','url','Введите ссылку на профиль','Вконтакте','contactVK')
										.col-md-3
											+input('facebook','url','Введите ссылку на профиль','Facebook','contactFacebook')
										.col-md-3
											+input('github','url','Введите ссылку на профиль','Github','contactGithub')
										.col-md-3
											+input('twitter','url','Введите ссылку на профиль','Twitter','contactTW')
									.row.mb-30.ml-0.mr-0
										.col-md-3
											+input('phone','tel','Введите телефон','Телефон','contactPhone')
										.col-md-3
											+input('address','text','Введите адрес','Адрес','contactAddress')
									.row.ml-0.mr-0
										+buttonSubmit('Сохранить', 'save-button', 'save')(class="ml-15 mr-20")
										+buttonSubmit('Отмена', 'infoButton')
						include ../sections/footer.pug