extends ../../layouts/ui-layout/ui-layout.pug

block variables
	- var title = 'Работы страница - UI-kit и HTML фреймворк - Документация';
	- var pageClass = 'body--dashboard';

block content
	.main-wrapper
		.container.container--left.user-content.pt-35
			h1 Работы страница
			.section-ui
				include ../user-profil-edit.pug
			pre.
				../user-profil-edit.pug	
			
			.title pages/user-profil-edit.pug
			pre.
				extends ../layouts/page-layout/page.pug

				block variables
					- var title = 'Профиль пользователя - редактировать';
					- var pageClass = 'content-page';

				block content
					include ../sections/header-user.pug
					.container.pb-120.pt-80.pl-0.pr-0
						.row
							.col-10.offset-1
								h1.user-edit-title Редактировать профиль
								.user-edit-wrapper
									.user-edit-name.mt-35
										+input('name','text','Введите имя','userEditName','Имя')
									.user-edit-lastname.mt-30
										+input('name','text','Введите фамилию','userEditLastname','Фамилия')
									.user-edit-email.mt-30
										+input('name','email','Введите email','userEditEmail','Email')
								.user-edit-foto.mt-30
									h6 Фотография
									p Изображение jpg или png, размером больше чем 100х100 пикселей, и весом до 2Мб.
									+file('Выбрать файл', 'Файл не выбран', 'fileUpload','fileUpload',false)
								.user-edit-wrapper
									.user-edit-land.mt-30
										+input('name','text','Введите страну','userEditLand','Страна')
									.user-edit-city.mt-30
										+input('name','text','Введите город','userEditCity','Город')
									.user-edit-buttons.mt-30
											+buttonSubmit('Сохранить', 'save-button', 'save')
											+button('Отмена', '#!', 'primary')
					include ../sections/footer.pug
