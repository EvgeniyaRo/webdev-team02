extends ../../layouts/ui-layout/ui-layout.pug

block variables
	- var title = 'UI Buttons - Кнопки';
	- var pageClass = 'body--dashboard';

block content
	.main-wrapper
		.container.container--left.user-content.pt-35
		.section-ui--wrapper
			.section-ui
				h2 normal
				li.ui-buttom__item
					+button--normal('Вперед','#!','fa-arrow-right')
				li.ui-buttom__item
					+button--detailed('Подробнее','#!')
				li.ui-buttom__item
					+button--edit('Редактировать','#!')
				li.ui-buttom__item
					+button--remove('Удалить','#!')
				li.ui-buttom__item
					+button--save('Сохранить','#!')
				li.ui-buttom__item
					+button--enter('Войти','#!')
				li.ui-buttom__item
					+button--profile('Профиль', '#!')
			.section-ui.section-ui__hover
				h2 hover, focus
				li.ui-buttom__item
					+button--normal('Вперед','#!','fa-arrow-right')
				li.ui-buttom__item
					+button--detailed('Подробнее','#!')
				li.ui-buttom__item
					+button--edit('Редактировать','#!')
				li.ui-buttom__item
					+button--remove('Удалить','#!')
				li.ui-buttom__item
					+button--save('Сохранить','#!')
				li.ui-buttom__item
					+button--enter('Войти','#!')
				li.ui-buttom__item
					+button--profile('Профиль', '#!')
			.section-ui.section-ui__active
				h2 active
				li.ui-buttom__item
					+button--normal('Вперед','#!','fa-arrow-right')
				li.ui-buttom__item
					+button--detailed('Подробнее','#!')
				li.ui-buttom__item
					+button--edit('Редактировать','#!')
				li.ui-buttom__item
					+button--remove('Удалить','#!')
				li.ui-buttom__item
					+button--save('Сохранить','#!')
				li.ui-buttom__item
					+button--enter('Войти','#!')
				li.ui-buttom__item
					+button--profile('Профиль', '#!')
		.container.container--left.user-content.pt-35
			h1 Кнопки - малого размера
			p Каждая кнопка может быть представлена в малом размере.
			.section-ui
				li.ui-buttom__item--small
					+buttonSmall--remove('Удалить', '#!')
				li.ui-buttom__item--small
					+buttonSmall--save('Сохранить', '#!')
				li.ui-buttom__item--small
					+buttonSmall--edit('Редактировать', '#!')
				li.ui-buttom__item--small
					+buttonSmall--detailed('Подробнее', '#!')


block scripts
	script(defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js")