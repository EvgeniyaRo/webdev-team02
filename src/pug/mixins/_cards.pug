mixin cardBlog(img, title, link)
        .card-box
            .card-box__img-blog.mb-15
                img(src=img)
            .card-box__title-blog.mb-15 #{title}
            +button('Читать', '#', 'primary')
        
mixin cardPortfolio(img, title, link)
        .card-box
            .card-box__img-portfolio.mb-15
                img(src=img)
            .card-box__title-portfolio.mb-20 #{title}
            +button('Смотреть кейс', '#', 'primary')
        